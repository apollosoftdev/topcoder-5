// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Challenge {
  id             Int             @id @default(autoincrement())
  legacyId       Int             @unique
  componentId    Int?
  ratedInd       Int?
  registrations  UserChallenge[]
  submissions    Submission[]
  rating_history RatingHistory[]

  @@map("challenges")
}

model User {
  id             Int             @id @default(autoincrement())
  handle         String          @unique
  rating         Int?            @default(1200)
  vol            Int?            @default(300)
  registrations  UserChallenge[]
  submissions    Submission[]
  rating_history RatingHistory[]

  @@map("users")
}

model UserChallenge {
  userId             Int
  challengeId        Int
  attended           String?
  placed             Int?
  old_rating         Int?
  old_vol            Int?
  system_point_total Float?
  point_total        Float?
  rated_ind          Int?
  user               User      @relation(fields: [userId], references: [id])
  challenge          Challenge @relation(fields: [challengeId], references: [id])

  @@id([userId, challengeId])
  @@map("user_challenges")
}

model Submission {
  id               String    @id @default(cuid())
  challengeId      Int
  userId           Int
  score            Float?
  initialScore     Float?
  submissionTime   DateTime  @default(now())
  submissionNumber Int
  example          Int
  openTime         DateTime
  languageId       Int
  challenge        Challenge @relation(fields: [challengeId], references: [id])
  user             User      @relation(fields: [userId], references: [id])

  @@map("submissions")
}

model RatingHistory {
  id          Int       @id @default(autoincrement())
  userId      Int
  challengeId Int
  rating      Int
  vol         Int
  createdAt   DateTime  @default(now())
  user        User      @relation(fields: [userId], references: [id])
  challenge   Challenge @relation(fields: [challengeId], references: [id])

  @@map("rating_history")
}

model ReviewType {
  id       String  @id
  name     String
  isActive Boolean
} 